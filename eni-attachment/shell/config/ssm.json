{
  "schemaVersion": "2.2",
  "description": "Command Document Example JSON Template",
  "mainSteps": [
    {
      "action": "aws:runShellScript",
      "name": "eni_attachment",
      "inputs": {
        "runCommand": [
          "gw=`route -n | grep 'UG[ \t]' | awk '{print $2}'`",
          "echo $gw >> /home/centos/testing23.txt",
          "cat >> /etc/sysconfig/network-scripts/ifcfg-eth1 <<EOF",
          "DEVICE=\"eth1\"",
          "BOOTPROTO=\"dhcp\"",
          "ONBOOT=\"yes\"",
          "TYPE=\"Ethernet\"",
          "USERCTL=\"yes\"",
          "PEERDNS=\"yes\"",
          "IPV6INIT=\"no\"",
          "DEFROUTE=\"no\"",
          "EOF",
          "systemctl restart network.service"
        ]
      }
    }
  ]
}